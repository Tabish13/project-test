{
    "compilerOptions": {
        "resolveJsonModule": true,
        "module": "commonjs",
        "allowJs": true,
        "checkJs":true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",        
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        } 
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/tools/**/*",
        "logs.*"
    ]
}
